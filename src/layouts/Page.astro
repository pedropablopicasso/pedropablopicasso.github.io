---
const props = Astro.props;
import NavBar from "../components/NavBar.astro";
import "../styles/styles.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=IBM+Plex+Serif:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=IBM+Plex+Sans:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
            rel="stylesheet"
        />

        <title>{props.title}</title>
    </head>
    <body class="container mx-auto p-4 font-serif leading-7">
        {!props.hasOwnProperty("no-nav") && <NavBar />}

        <main>
            <slot />
        </main>
    </body>
</html>
